{
  "name": "create-stk-repo",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo run dev --parallel --filter=./apps/* --filter=!./apps/cli",
    "cli:dev": "turbo run cli:dev --filter=./apps/cli",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "ci": "turbo run lint && turbo run test && turbo run build",
    "release": "turbo run lint test build && changeset publish",
    "publish": "pnpm --filter ./apps/cli publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.1"
  }
}
